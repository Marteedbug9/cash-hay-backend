{
  "compilerOptions": {
    "target": "ES2020",                          // Bonne compatibilité moderne
    "module": "commonjs",                        // Parfait pour Node.js
    "moduleResolution": "node",                  // Résolution standard des modules
    "strict": true,                              // Active toutes les vérifications strictes
    "esModuleInterop": true,                     // Permet d'importer des modules CommonJS (comme multer)
    "allowSyntheticDefaultImports": true,        // Nécessaire avec esModuleInterop
    "skipLibCheck": true,                        // Ignore les erreurs dans node_modules
    "resolveJsonModule": true,                   // Autorise les imports de .json
    "forceConsistentCasingInFileNames": true,    // Évite les erreurs sensibles à la casse
    "outDir": "dist",                            // Répertoire de sortie compilé
    "rootDir": "src",                            // Dossier source
    "baseUrl": "./"                              // Pour simplifier les imports relatifs
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "test-server.ts",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
